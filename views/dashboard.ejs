<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col text-end">
            <a href="/add-note" class="btn btn-primary">+ New Note</a>
        </div>
    </div>
    <p class="text-center mt-3"></p>
    <div class="row">
        <% if (notes.length> 0) { %>
            <% for (var i=0; i < notes.length; i++) { %>
                <div class="col-sm-3 mb-4">
                    <div class="card border-primary shadow" style="min-height: 210px">
                        <a href="/note/<%= notes[i]._id %>" class="card-body text-decoration-none">
                            <h5 class="fw-bold">
                                <%= notes[i].title %>
                            </h5>
                            <p>
                                <%= notes[i].body %>
                            </p>
                        </a>
                    </div>
                </div>
                <% } %>
                    <% } else { %>
                        <div class="row">
                            <div class="col mt-md-4 text-center">
                                <h2>All your notes in one place! üìù</h2>
                                <h4>Start creating and organizing your thoughts. <br /><br />
                                    <a href="/add-note" class="motivation-text ">Add your first note and
                                        make it amazing!
                                        üí°</a>
                                </h4>
                            </div>
                        </div>
                        <% } %>
    </div>

    <% if (notes.length> 0) { %>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center mt-5">
                <% if (current==1) { %>
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
                        <% } %>
                            <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                                <% if (i !==1) { %>
                                    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                                    <% } %>
                                        <% for (; i <=(Number(current) + 4) && i <=pages; i++) { %>
                                            <% if (i==current) { %>
                                                <li class="page-item active"><a class="page-link" href="#">
                                                        <%= i %>
                                                    </a></li>
                                                <% } else { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/dashboard/?page=<%= i %>">
                                                            <%= i %>
                                                        </a></li>
                                                    <% } %>
                                                        <% if (i==Number(current) + 4 && i < pages) { %>
                                                            <li class="page-item disabled"><a class="page-link"
                                                                    href="#">...</a></li>
                                                            <% } %>
                                                                <% } %>
                                                                    <% if (current==pages) { %>
                                                                        <li class="page-item disabled"><a
                                                                                class="page-link">Last</a></li>
                                                                        <% } else { %>
                                                                            <li class="page-item"><a
                                                                                    href="/dashboard/?page=<%= pages %>"
                                                                                    class="page-link">Last</a></li>
                                                                            <% } %>
            </ul>
        </nav>
        <% } %>
</div>