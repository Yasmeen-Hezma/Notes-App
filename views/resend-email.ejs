<div class="container">
    <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
        <% } %>

            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
                <% } %>
                    <h2 class="fw-bold text-primary">Resend Verification Email &#x2709;</h2>
                    <p>
                        If you haven't received the verification email, please enter your email address below, and we
                        will send you
                        a new verification email.
                    </p>
                    <form class="form" action="/resend-email" method="POST">
                        <div class="form-group">
                            <h3 class="mb-2">Email Address:<h3>
                                    <input type="email" id="email" name="email" class="form-control"
                                        placeholder="Your Email" required>
                        </div>
                        <button class="btn btn-primary" type="submit">Resend Verification Email</button>
                    </form>
</div>